{
    "version": "0.2.0",
    "configurations": [

        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach"
        },
        {
            "type": "cppdbg",
            "name": "Launch Program (GDB)",
            "request": "launch",
            "program": "${workspaceFolder}\\main.cpp", // Change this to your executable name
            "args": [], // Add any command line arguments here
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "clang++",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build", // This is assuming you have a task named "build" to build your program
            "miDebuggerPath": "/path/to/your/gdb" // Change this to the path of your GDB executable
        }
    ]
}
